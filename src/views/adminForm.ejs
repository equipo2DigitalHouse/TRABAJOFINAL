    <main>
        <form method="post">  
            <div class="formLogin">
                <h2>
                    Formulario de Administrador
                </h2>
                <div>
                    <div>
                        <input class="loginBar" type="text" name="Nombre de Producto" id="" placeholder=" Nombre de Producto" required>
                    </div>
                    <div>
                        <input class="loginBar" type="text" name="Descripción" id="" placeholder="Descripción" required>
                    </div>
